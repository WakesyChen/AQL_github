<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/global_bg_gray">

    <LinearLayout
        android:id="@+id/layout_text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <!-- 标题 -->

        <TextView
            android:id="@+id/dialog_text_prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:text="分享到"
            android:textColor="@color/global_color_blue"
            android:textSize="17sp"/>
        <!-- 账号 -->

        <View
            android:id="@+id/dialog_line_title"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/global_color_blue"/>

        <!-- 提示 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/share_to_friend_group"
                style="@style/share_item"
                android:drawableTop="@drawable/ic_share_friend_group"
                android:text="朋友圈"/>

            <TextView
                android:id="@+id/share_to_weixin"
                style="@style/share_item"
                android:drawableTop="@drawable/ic_share_weixin"
                android:text="微信"/>

            <TextView
                android:id="@+id/share_to_sina"
                style="@style/share_item"
                android:drawableTop="@drawable/ic_share_sina"
                android:text="微博"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/share_to_qzone"
                style="@style/share_item"
                android:drawableTop="@drawable/ic_share_qzone"
                android:text="QQ空间"/>

            <TextView
                android:id="@+id/share_to_qq"
                style="@style/share_item"
                android:drawableTop="@drawable/ic_share_qq"
                android:text="QQ"/>

            <TextView
                android:id="@+id/share_to_other"
                style="@style/share_item"
                android:drawableTop="@drawable/ic_share_other"
                android:text="复制链接"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="18sp"
            android:background="@color/global_color_gray"/>
    </LinearLayout>

    <Button
        android:id="@+id/dialog_btn_orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_text_content"
        android:background="@drawable/btn_general_white_blue_selctor"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="取消"
        android:textColor="@color/global_color_black"/>

</RelativeLayout>