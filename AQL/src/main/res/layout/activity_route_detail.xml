<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="www.aql.com.activities.routedetail.RouteDetailActivity">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/distance_title"
        android:background="@color/colorPrimary">

        <include layout="@layout/imageview_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="线路详情"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_20sp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_kefu"
            android:layout_width="@dimen/distance_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/kefu"
            android:gravity="center"
            android:padding="@dimen/distance_5dp"
            android:text="在线客服"
            android:textColor="@color/gray"
            android:textSize="@dimen/ts_16sp"/>

        <TextView
            android:id="@+id/tv_shoppingcart"
            android:layout_width="@dimen/distance_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/shoppingcart"
            android:gravity="center"
            android:padding="@dimen/distance_10dp"
            android:text="购物车"
            android:textColor="@color/gray"
            android:textSize="@dimen/ts_16sp"/>

        <TextView
            android:id="@+id/tv_one_yuan_purchase"
            android:layout_width="@dimen/distance_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/one_yuan_purchase"
            android:gravity="center"
            android:padding="@dimen/distance_10dp"
            android:text="一元购"
            android:textColor="@color/gray"
            android:textSize="@dimen/ts_16sp"/>

        <TextView
            android:id="@+id/tv_prebuy_now"
            android:layout_width="@dimen/distance_0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="立即预订"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_16sp"/>
    </LinearLayout>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom"
        android:layout_below="@id/rl_title"/>

</RelativeLayout>
