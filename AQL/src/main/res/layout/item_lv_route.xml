<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/taiwan"/>

    <TextView
        android:id="@+id/tv_routeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img"
        android:gravity="center"
        android:padding="@dimen/distance_10dp"
        android:text="线路名"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_evaluationCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_routeName"
        android:layout_marginBottom="@dimen/distance_20dp"
        android:layout_marginLeft="@dimen/distance_10dp"
        android:drawableLeft="@drawable/evaluation_count"
        android:drawablePadding="@dimen/distance_10dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="评论量"
        android:textColor="@color/gray"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/tv_collectionCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_evaluationCount"
        android:layout_marginLeft="@dimen/distance_20dp"
        android:layout_toRightOf="@id/tv_evaluationCount"
        android:drawableLeft="@drawable/collection_count"
        android:drawablePadding="@dimen/distance_10dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="收藏量"
        android:textColor="@color/gray"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_collectionCount"
        android:layout_alignRight="@id/img"
        android:layout_below="@id/img"
        android:layout_marginBottom="@dimen/distance_10dp"
        android:layout_marginRight="@dimen/distance_10dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="价格"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        />

</RelativeLayout>